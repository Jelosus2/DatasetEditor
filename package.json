{
  "name": "dataset-editor",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "app/main.js",
  "description": "A dataset editor",
  "author": "Jelosus1",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "e-dev": "set NODE_ENV=debug&& run-p dev electron",
    "e-prod": "run-p dev electron",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "package:win": "vite build && electron-builder build --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "better-sqlite3": "^11.8.1",
    "dtext-parser": "^1.0.0",
    "lodash": "^4.17.21",
    "pinia": "^3.0.1",
    "sharp": "^0.34.2",
    "strip-ansi": "^7.1.0",
    "tailwindcss": "^4.0.6",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.13.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/tsconfig": "^0.7.0",
    "daisyui": "5.0.0",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.7.3",
    "vite": "^6.0.11",
    "vue-tsc": "^2.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller"
    ]
  },
  "build": {
    "appId": "com.jelosus1.dataset-editor",
    "productName": "Dataset Editor",
    "directories": {
      "output": "dist_electron/${os}"
    },
    "files": [
      "dist/**/*",
      "app/**/*"
    ],
    "extraResources": [
      {
        "from": "tagger",
        "to": "tagger",
        "filter": [
          "**/*",
          "!**/venv/**",
          "!**/embedded_python/*",
          "!**/dependencies_installed"
        ]
      },
      {
        "from": "Data",
        "to": "Data",
        "filter": [
          "**/*",
          "!**/settings.json",
          "!**/TagGroups/tag_groups.json"
        ]
      }
    ],
    "win": {
      "icon": "public/doro.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "extraResources": [
        {
          "from": "embedded_python",
          "to": "tagger/embedded_python",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/yes_doro.ico",
      "uninstallerIcon": "build/no_doro.ico",
      "include": "build/installer.nsh"
    }
  }
}
